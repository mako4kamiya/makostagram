<article>
    <section>
        <% @posts.each do |post| %>
        <div class="post">
            <div class="article-headder">
                <div class="article-headder-left">
                <img src="/images/profile_images/<%= post['profile_image']%>" >
                    <p><%= post['user_name']%></p>
                </div>
                <i class="fas fa-ellipsis-h"></i>
            </div>
            <img src="/images/post_images/<%= post['image']%>" alt="">
            <div  class="article-main">
                <div class="article-middle">
                <% if (post['liked_by']).eql?(@active_user)%>
                    <div class="dislike">
                        <a href="/dislike/<%= post['id']%>"><i class="fas fa-heart pink_heart "></i></a>
                        <p>you liked</p>
                    </div>
                <% else %>
                    <div class="like">
                        <a href="/like/<%= post['id']%>"><i class="far fa-heart"></i></a>
                    </div>
                <% end %>
                </div>
                <div class="article-contents">
                    <h1><%= post['user_name']%></h1>
                    <p><%= post['content']%></p>
                </div>
            </div>
        </div>
        <% end %>
    </section>
    <aside>
        <div class="aside_top">
            <a href="/profile">
                <img src="/images/profile_images/<%= @profile_image%>">
            </a>
            <p><%= @name%></p>
        </div>
        <div class="aside_bottom">
        <p>hello <%= @name%></p>
        </div>
    </aside>
</article>


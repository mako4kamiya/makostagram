<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- fontawesomeの読み込み -->
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">

    <!-- cssの読み込み -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/modal.css">
    <link rel="stylesheet" href="/css/like.css">


    <%#<title> <%= @active_users tagram</title> %>
    <title>makotagram</title>
    
</head>
<body>


<!-- Modal upload-image -->
<div class="modal">
  <input class="modal-open" id="upload-image" type="checkbox" hidden>
  <div class="modal-wrap" aria-hidden="true" role="dialog">
    <label class="modal-overlay" for="upload-image"></label>
    <div class="modal-dialog">
        <form action="/index" method="POST" enctype="multipart/form-data">
            <div class="modal-header">
                <h2>投稿しよう！</h2>
                <label class="btn-close" for="upload-image" aria-hidden="true">×</label>
            </div>
            <div class="modal-body">
                    <input type="file" name="img" id="img">
                    <input type="text" name="content" id="content" placeholder="コメント">
            </div>
            <div class="modal-footer">
                <label class="btn btn-primary" for="upload-image">
                    <input type="submit" value="送信する">
                </label>
            </div>
        </form> 
    </div>
  </div>
</div>

    <header>
        <div class="container">
            <div class="header-left">
                <label class="btn" for="upload-image">
                    <i class="fab fa-instagram"></i>
                </label>
                <a href="/">
                    <p>Makostagram</p>
                </a>
            </div>

            <%# 検索ボックス クリック前%>
            <div id="search-box">
                <i class="fas fa-search"></i>
                <p>検索</p>
            </div>
            <%# 検索ボックス クリック後%>
            <div id ="search-box-active" class="display-none">
                <div class="d-flex align-items-center">
                    <i class="fas fa-search"></i>
                    <input type="search" placeholder ="検索">
                </div>
                <i id="close" class="fas fa-times-circle"></i>
            </div>

            <div class="header-right">
                <i class="far fa-compass"></i>
                <a href="/liking"><i class="far fa-heart"></i></a>
                <a href="/following"><i class="far fa-user"></i></a>
            </div>
        </div>
    </header>
    <main>
    
<%= yield%>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="/js/searchbox.js" type="text/javascript"></script>
    </main>



</body>
</html>